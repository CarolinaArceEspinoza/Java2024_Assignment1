          <font>
              <Font name="Arial Bold" size="20.0" />
          </font>
          <effect>
                  <Bloom />
            </effect>
            <VBox.margin>
                  <Insets left="29.0" top="15.0" />
            </VBox.margin>
      </Label>
      <ButtonBar buttonMinWidth="100.0" layoutX="213.0" layoutY="75.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="600.0" styleClass="buttonbar" stylesheets="@style.css">
            <buttons>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#tableViewButton" text="Check the list" textAlignment="CENTER" />
                  <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#powerViewButton" text="Check the powers" textAlignment="CENTER" />
                  <Button alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#kindViewButton" text="Check the kind" textAlignment="CENTER" />
