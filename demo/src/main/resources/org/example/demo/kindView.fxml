       <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>

          <RadioButton id="kind" fx:id="kindRadioButton" onAction="#handleRadioButtonAction" text="Kind of character" textFill="#ffe205">
              <font>
                  <Font name="Arial Bold" size="15.0" />
              </font>
          </RadioButton>
          <RadioButton id="species" fx:id="speciesRadioButton" onAction="#handleRadioButtonAction" text="Species" textFill="#ffe205" GridPane.columnIndex="1">
              <font>
                  <Font name="Arial Bold" size="15.0" />
              </font>
          </RadioButton>
          <RadioButton id="origin" fx:id="originRadioButton" onAction="#handleRadioButtonAction" styleClass="radioBackground" stylesheets="@style.css" text="Origin" textFill="#ffe205" GridPane.columnIndex="2">
              <font>
                  <Font name="Arial Bold" size="15.0" />
              </font>
          </RadioButton>
      </children>
      <VBox.margin>
         <Insets bottom="10.0" left="40.0" right="40.0" />
      </VBox.margin>
   </GridPane>
      <VBox layoutX="85.0" layoutY="31.0" prefHeight="200.0" prefWidth="100.0">
      <children>
         <PieChart fx:id="pieChart" labelLineLength="10.0" legendSide="RIGHT" maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="750.0" styleClass="piechart" stylesheets="@style.css">
